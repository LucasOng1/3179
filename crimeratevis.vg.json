{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 600,
  "projection": {"type": "equalEarth"},
  "title": {
    "text": "Intentional homicides per country per 100k",
    "fontSize": 20
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2002,
      "bind": {
        "input": "range",
        "min": 1998,
        "max": 2021,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "mark": {"type": "geoshape", "filled": false, "color": "lightgray"},
      "data": {
        "url": "https://raw.githubusercontent.com/LucasOng1/3179/refs/heads/main/ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      }
    },
    {
      "data": {
        "url": "https://gist.githubusercontent.com/alexwebgr/10249781/raw/2df84591a9e1fb891bcfde3a3c41d6cfc70cb5ee/world-topo.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1,
        "opacity": 0.75
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LucasOng1/3179/refs/heads/main/crime_rate.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "lookup": "Country Name",
          "from": {
            "data": {
              "url": "https://gist.githubusercontent.com/alexwebgr/10249781/raw/2df84591a9e1fb891bcfde3a3c41d6cfc70cb5ee/world-topo.json",
              "format": {"type": "topojson", "feature": "countries"}
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {"filter": "datum['Year'] == Year_selection"},
        {
          "filter": "isValid(datum['Crime rate']) && datum['Crime rate'] !== NaN"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5,
        "opacity": 0.75
      },
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Crime rate",
          "type": "quantitative",
          "title": "Homicides per 100k",
          "scale": {
            "type": "threshold",
            "range": [
              "#fff5f0",
              "#fcbba1",
              "#fb6a4a",
              "#cb181d",
              "#a50f15",
              "#67000d"
            ],
            "domain": [0, 5, 15, 30, 50]
          }
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal", "title": "Country"},
          {
            "field": "Crime rate",
            "type": "quantitative",
            "title": "Homicides per 100k",
            "format": ".3f"
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "latitude": 4.5709,
            "longitude": -74.2973,
            "latitude2": -37,
            "longitude2": -19,
            "Year": 2011
          },
          {
            "latitude": 15.2,
            "longitude": -86.2419,
            "latitude2": -12,
            "longitude2": -99,
            "Year": 2010
          },
          {
            "latitude": 61.524,
            "longitude": 105.3188,
            "latitude2": -7,
            "longitude2": 76,
            "Year": 2002
          }
        ]
      },
      "mark": "rule",
      "transform": [
        {"filter": "Year_selection == datum['Year']"}
      ],
      "encoding": {
        "latitude": {"field": "latitude"},
        "longitude": {"field": "longitude"},
        "latitude2": {"field": "latitude2"},
        "longitude2": {"field": "longitude2"},
        "strokeWidth": {"value": 1},
        "color": {"value": "black"}
      }
    },
    {
      "data": {
        "values": [
          {
            "latitude": -37,
            "longitude": -19,
            "Year": 2011,
            "note": "Borders for Prosperity plan launched"
          },
          {
            "latitude": -12,
            "longitude": -99,
            "Year": 2010,
            "note": "Plan de la Patria launched"
          },
          {
            "latitude": -7,
            "longitude": 76,
            "Year": 2002,
            "note": "Federal Program for Combating Crime launched"
          }
        ]
      },
      "mark": {
        "type": "text",
        "text": {
          "expr": "datum['note']"
        },
        "dx": 30,
        "dy": 6,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "black"
      },
      "transform": [
        {"filter": "Year_selection == datum['Year']"}
      ],
      "encoding": {
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        }
      }
    }
  ]
}