{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 500,
    "title": {
      "text": "GDP per capita (US$) of each country",
      "fontSize": 20
    },
    "data": {
      "url": "https://raw.githubusercontent.com/LucasOng1/3179/refs/heads/main/gdp_filtered.csv",
      "format": {"type": "csv"}
    },
    "params": [
      {
        "name": "Country_selection",
        "select": {
          "type": "point",
          "fields": ["Country Name"]
        },
        "bind": "legend"
      }
    ],
    "transform": [
      {"filter": "datum['GDP'] !== 'NaN'"},
      {"calculate": "parseFloat(datum['GDP'])", "as": "GDP_float"},
      {
        "filter": "datum['Country Name'] == 'United States' || datum['Country Name'] == 'China' || datum['Country Name'] == 'Germany' || datum['Country Name'] == 'United Kingdom' || datum['Country Name'] == 'France' || datum['Country Name'] == 'Japan' || datum['Country Name'] == 'India' || datum['Country Name'] == 'Russia' || datum['Country Name'] == 'Brazil' || datum['Country Name'] == 'Canada'"
      },
  
      {
        "sort": [{"field": "GDP_float", "order": "descending"}],
        "window": [{"op": "rank", "as": "GDP_rank"}],
        "groupby": ["Year"]
      }
    ],
    "mark": {
      "type": "line",
      "point": false
    },
    "encoding": {
          "x": {"field": "Year", "timeUnit": "binnedutcyear"},
          "y": {"field": "GDP_rank", "type": "ordinal", "title": "GDP Ranking"},
          "order": {"field": "Country Name", "sort": "descending"},
          "color": {
            "field": "Country Name", "type": "nominal", "scale": {"range": [
              "#1167fa",
              "#367aba",
              "#3b9bf5",
              "#a14f2a",
              "#fa7d23",
              "#f7cb92",
              "#636363",
              "#969696",
              "#bababa"
            ]}
          },
          "tooltip": [
            {"field": "Country Name", "type": "nominal", "title": "Country Name"},
            {"field": "GDP", "type": "quantitative", "title": "GDP per capita (US$)"},
            {"field": "GDP_rank", "type": "ordinal", "title": "GDP ranking"}
          ],
          "opacity": {
            "condition": {
              "param": "Country_selection", "value": 1
            },
            "value": 0.2
          }
      }
  }